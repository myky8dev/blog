<%= render 'shared/page_title', title: 'All Chefs' %>

<ul class="nav nav-tabs">
    <li>
        <%= link_to "Recipes", recipes_path %>
    </li>
    <li class="active">
        <%= link_to "Chefs", chefs_path %>
    </li>
    <li>
        <%= link_to "Ingredients", ingredients_path %>
    </li>
    <li>
        <%= link_to "Styles", styles_path %>
    </li>
</ul>

<div class='row'>
    <div class='col-md-4 col-md-offset-4 center'>
        <%= will_paginate %>
    </div>
</div>
<hr/>
<% @chefs.each do |chef| %>
    <div class='row'>
        <div class='col-md-4 col-md-offset-4 center'>
            <%= link_to gravatar_for(chef, size: 100), chef_path(chef) %>
            <p>
                <h5>Chef name: <%= chef.chefname %></h5>
            </p>
        </div>
    </div>
<% end %>

<%= will_paginate %>